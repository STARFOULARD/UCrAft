<UserControl x:Class="Vues.UCPetitsElements.DetailSpecifiqueItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vues.UCPetitsElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="5" Padding="5">
        <Border.Background>
            <SolidColorBrush Color="Black" Opacity="0.4"/>
        </Border.Background>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" FontSize="15" Text="{Binding Efficacite, StringFormat=Efficacité : \{0\}}" Foreground="White"/>
            <TextBlock TextWrapping="Wrap" FontSize="15" Text="{Binding Importance, StringFormat=Importance : \{0\}}" Foreground="White"/>
            <TextBlock TextWrapping="Wrap" FontSize="15" Text="{Binding CraftItem.NombreLorsDeLaCreation, StringFormat=Nombre à la création : \{0\}}" Foreground="White"/>
        </StackPanel>
    </Border>
</UserControl>
