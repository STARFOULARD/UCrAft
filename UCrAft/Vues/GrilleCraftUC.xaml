<UserControl x:Class="Vues.GrilleCraftUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vues"
             xmlns:petitsElements="clr-namespace:Vues.UCPetitsElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox DockPanel.Dock="Top" Stretch="Uniform"  MaxHeight="600">
        <Grid x:Name="GridCraft" Margin="15,0,15,0" MinHeight="100" MinWidth="100" Grid.IsSharedSizeScope="True">
            <!--Les SharedSizeGroup permettent d'avoir toute les cases de la meme taille-->
            <Grid.RowDefinitions>
                <RowDefinition SharedSizeGroup="All" Height="*" MinHeight="20"/>
                <RowDefinition SharedSizeGroup="All" Height="*"/>
                <RowDefinition SharedSizeGroup="All"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="All"/>
                <ColumnDefinition SharedSizeGroup="All"/>
                <ColumnDefinition SharedSizeGroup="All"/>
            </Grid.ColumnDefinitions>
            
        </Grid>
    </Viewbox>
</UserControl>
